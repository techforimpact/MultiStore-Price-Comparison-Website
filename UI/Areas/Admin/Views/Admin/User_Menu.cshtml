@model IEnumerable<Object_Layer.User>

@{
    ViewBag.Title = "User_Menu";
    ViewBag.CssFileName = "stores.css";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="inSidebarContainer">
    <div class="topnav">
        <a href="@Url.Action("Logout", "Admin", new { area = "Admin" })" class="material-symbols-outlined">logout</a>
        <a href="#contact" class="material-symbols-outlined">account_circle expand_more</a>
    </div>
</div>


<div class="mainPage">
    <h2>User Menu</h2>

   <button class="user-Btn">
        @Html.ActionLink("Create New", "NewUser")
    </button>
    <div class="table">
        <table class="viewCatagories">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.created_at)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.role)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.created_at)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.role)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = item.id }, new { @class = "material-symbols-outlined link" }) <span>   |    </span> 
                        @Html.ActionLink("Delete", "DeleteUser", new { id = item.id},    new { @class = "material-symbols-outlined link" })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
