@model IEnumerable<Object_Layer.Store>

@{
    ViewBag.Title = "Stores";
    ViewBag.CssFileName = "stores.css";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="inSidebarContainer">
    <div class="topnav">
        <a href="@Url.Action("Logout", "Admin", new { area = "Admin" })" class="material-symbols-outlined" onsubmit = "return confirm('Are you sure you want to delete this product?');">logout</a>
        <a href="#news" class="material-symbols-outlined">notifications</a>
        <a href="#contact" class="material-symbols-outlined">account_circle expand_more</a>
        @using (Html.BeginForm("Stores", "Admin", new { area = "Admin" }, FormMethod.Get))
        {
            <button type="submit">Search</button>
            <input type="search" placeholder="Search...">

        }
    </div>
</div>


<div class="mainPage">
    <h1>Stores</h1>
    @*    <p>
            @Html.ActionLink("Create New", "Create")
        </p>*@

    @using (Html.BeginForm("AddStore", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

            <div class="addCatagories">
                <h2>Add a new Store</h2>
                <input type="text" name="name" id="name" placeholder="Name"><br>
                <input type="file" name="image" id="state" placeholder="Store Logo"><br>
                <input type="text" name="address" id="address" placeholder="Country"><br>
                <input type="text" name="city" id="city" placeholder="City"><br>
                <input type="text" name="state" id="state" placeholder="State"><br>
                <input type="text" name="country" id="country" placeholder="Country"><br>
                <button type="submit" class="add-product-button">Add</button>
            </div>

    }
    <div class="lower-section">
        <p>View Stores</p>
        <table class="viewCatagories">

            <tr>
                <th class="table-cell heading">
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th class="table-cell">
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th class="table-cell">
                    @Html.DisplayNameFor(model => model.address)
                </th>
                <th class="table-cell">
                    @Html.DisplayNameFor(model => model.city)
                </th>
                <th class="table-cell heading">
                    @Html.DisplayNameFor(model => model.state)
                </th>
                <th class="table-cell heading">
                    @Html.DisplayNameFor(model => model.zip_code)
                </th>

                <th>
                    Edit
                </th>
                <th>
                    Details
                </th>
                <th>
                    Delete
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td id="@item.id" class="table-cell">
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td class="table-cell link">
                        @*@Html.ActionLink(item.Name, "Store", "Admin", new { id = item.id }, null)*@
                        @Html.DisplayFor(modelItem => item.name);
                    </td>
                    <td class="table-cell">
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                    <td class="table-cell">
                        @Html.DisplayFor(modelItem => item.city)
                    </td>
                    <td class="table-cell">
                        @Html.DisplayFor(modelItem => item.state)
                    </td>
                    <td class="table-cell">
                        @Html.DisplayFor(modelItem => item.zip_code)
                    </td>
                    <td class="table-cell">
                        @using (Html.BeginForm("EditStore", "Admin", new { id = item.id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="link-button">Edit</button>
                        }
                    </td>
                    <td class="table-cell">
                        @using (Html.BeginForm("StoreDetails", "Admin", new { id = item.id }, FormMethod.Post ))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="link-button">Details</button>
                        }
                    </td>
                    <td class="table-cell">
                        @using (Html.BeginForm("DeleteStore", "Admin", new { id = item.id }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this product?');" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>



</div>




